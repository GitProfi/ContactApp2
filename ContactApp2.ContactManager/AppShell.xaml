<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContactApp2.ContactManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ContactApp2.ContactManager"
    xmlns:pages="clr-namespace:ContactApp2.ContactManager.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="ContactApp2.ContactManager">

    
    <TabBar>
        <Tab Title="Main">
            <ShellContent
                Title="Main"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
            
        </Tab>

        <Tab Title="Add">
            <ShellContent
            Title="Add"
         ContentTemplate="{DataTemplate pages:AddPage}"
         Route="AddPage" />

        </Tab>

        <Tab Title="Report">
            <ShellContent
         ContentTemplate="{DataTemplate pages:ReportPage}"
         Route="ReportPage" />

        </Tab>

    </TabBar>
    


</Shell>
